@require '_variables';
@require '_mixins';

.p-menu
  .p-menu-item-github-button
    min-width 74px
  .p-github-button-widget
    position relative
    top 5px
  .p-menu-item-contribute
    display none
  ul
    margin 0
    padding 0
  li
    display inline-block
    &:not(:first-child)
      margin-left 40px
    & + li
      margin-top 0
  a
    font-size $font-size-xxs
    font-weight bold
    text-transform uppercase
    border 0
    +highlight()
      color $color-blue-light
    &.router-link-exact-active
      color $color-blue-light
      &:hover
        cursor none
        pointer-events none

+breakpoint('xs')
  .p-menu
    .p-menu-item-github-button
      display none
    .p-menu-item-contribute
      display inline-block
