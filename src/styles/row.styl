@require '_mixins'
@require 'col'

.p-row
  margin 0 $col-padding * -1
  width 100%
  clearfix()
  & + .p-row:not(.row-vertical-offset*)
    margin-top 15px
  &.p-row-vertical-centered
    display flex
    align-items center

for $size in (1..10)
  .p-row-vertical-offset-{$size}
    margin-top $size * 10px

+breakpoint('xs')
  .p-row
    &.p-row-vertical-centered
      display block
