@require '_variables'
@require '_mixins'

.p-home-panel
  display flex
  align-items center
  min-height 100vh
  .p-home-panel-logo-container
    position relative
    .p-tag
      position absolute
      top 50%
      left 145px
      color $color-orange
      border-color $color-orange
      transform('translateY(-50%)')
  h1
    font-size $font-size-xl
    font-weight bold

+breakpoint('xs')
  .p-home-panel
    display block
    padding 50px 0
    .p-features-list
      margin-top 50px
